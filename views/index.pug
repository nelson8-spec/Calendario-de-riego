doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", rel="stylesheet")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css", rel="stylesheet")
    link(rel="stylesheet", href="/css/style.css")
  body
    nav.navbar.navbar-expand-lg.navbar-black
      .container-fluid
        a.navbar-brand(href="/") Calendario de riego
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href="/calendario") Calendario
            li.nav-item
              a.nav-link(href="/sensores") Sensores
            li.nav-item
              a.nav-link(href="/historico") Hist√≥rico
            li.nav-item
              a.nav-link(href="/tiempo-real") Tiempo Real


    .container.mt-5
      h1.mb-4 #{title}
      if notificacion
        .alert.alert-info.fade.show(role="alert")
          | #{notificacion}
          button.btn-close(type="button", data-bs-dismiss="alert", aria-label="Close")
      p Bienvenido al sistema de calendario de riego
      block content

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
    script(src="/js/main.js")
