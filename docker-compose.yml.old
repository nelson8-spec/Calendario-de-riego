version: '3.8'

services:
  db:
    image: postgres:14-alpine
    container_name: orquidea_db
    restart: always
    environment:
      POSTGRES_USER: postgres_user
      POSTGRES_PASSWORD: postgres_password
      POSTGRES_DB: orquidea_db
    volumes:
      - postgres_data:/var/lib/postgresql/data
      - ./init-db:/docker-entrypoint-initdb.d
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres_user -d orquidea_db"]
      interval: 10s
      timeout: 5s
      retries: 5
    networks:
      - orquidea_net

  backend:
    build: . 
    container_name: orquidea_backend
    environment:
      PGUSER: postgres_user
      PGPASSWORD: postgres_password
      PGDATABASE: orquidea_db
      PGHOST: db 
      PGPORT: 5432
    depends_on:
      db:
        condition: service_healthy 
    networks:
      - orquidea_net



  nginx:
    image: nginx:stable-alpine
    container_name: orquidea_nginx
    ports:
      - "80:80"
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf:ro
    depends_on:
      - backend
    networks:
      - orquidea_net

  backup:
    build:
      context: ./backup
    environment:
      PGUSER: postgres_user
      PGPASSWORD: postgres_password
      PGDATABASE: orquidea_db
      PGHOST: db
    volumes:
      - backup_data:/backups
    depends_on:
      - db
    networks:
      - orquidea_net

volumes:
  postgres_data:
  backup_data:

networks:
  orquidea_net:
    driver: bridge